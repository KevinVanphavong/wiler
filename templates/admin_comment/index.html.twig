		<h1 class="mb-5 text-center text-light">Liste des
			<strong class="text-primary font-italic">commentaires</strong>
		</h1>

		<div class="table-responsive">
			<table class="table bg-light table-hover text-center">
				<thead class="table bg-primary text-light rounded">
					<tr>
						<th>Wilfer</th>
						<th>Contenu</th>
						<th>Membre</th>
						<th>Note</th>
						<th>Approuvé</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for comment in comments %}
						<tr>
							<td>{{ comment.wilfer.firstname | slice(0,1) ~ ' . ' ~ comment.wilfer.lastname | slice(0,1) }}</td>
							<td>{{ comment.content | slice(0,5) ~ '...' }}</td>
							<td>{{ comment.author.firstname ~ ' ' ~ comment.author.lastname }}</td>
							<td>{{ comment.note ~ '/5' }}</td>
							<td>
								{{ comment.isApprouved ? "✅" : "❌" }}
							</td>
							<td>
								<div class="btn-group">
									<a href="{{ path('admin_comment_edit', {'commentId': comment.id, "wilferId" : comment.wilfer.id}) }}" class="btn btn-sm btn-outline-primary rounded">
										<svg xmlns="http://www.w3.org/2000/svg" width="15" height="15" fill="currentColor" class="bi bi-pen text-center" viewbox="0 0 16 16">
											<path fill-rule="evenodd" d="M13.498.795l.149-.149a1.207 1.207 0 1 1 1.707 1.708l-.149.148a1.5 1.5 0 0
                                            1-.059 2.059L4.854 14.854a.5.5 0 0 1-.233.131l-4 1a.5.5 0 0 1-.606-.606l1-4a.5.5
                                            0 0 1 .131-.232l9.642-9.642a.5.5 0 0 0-.642.056L6.854 4.854a.5.5 0 1
                                            1-.708-.708L9.44.854A1.5 1.5 0 0 1 11.5.796a1.5 1.5 0 0 1
                                            1.998-.001zm-.644.766a.5.5 0 0 0-.707 0L1.95 11.756l-.764 3.057 3.057-.764L14.44
                                            3.854a.5.5 0 0 0 0-.708l-1.585-1.585z"/>
										</svg>
									</a>

									<span class="ml-2">{{ include('admin_comment/_delete_form.html.twig') }}</span>
								</div>
							</td>
						</tr>
					{% else %}
						<tr>
							<td colspan="6">Pas de commentaires</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>